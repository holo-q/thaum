{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "[HH:mm:ss] "
    }
  },
  "Cache": {
    "Directory": "./cache",
    "DefaultExpiration": "24:00:00"
  },
  "LLM": {
    "Provider": "openai",
    "BaseUrl": null,
    "ApiKey": null,
    "DefaultModel": "gpt-4",
    "Temperature": 0.7,
    "MaxTokens": 4096,
    "AppName": "Thaum",
    "SiteUrl": "https://github.com/your-repo/thaum"
  },
  "MCP": {
    "Port": 0,
    "ServerName": "thaum-mcp-server",
    "AutoStart": false
  },
  "LSP": {
    "Timeout": "00:02:00",
    "PythonCommand": [
      "python",
      "-m",
      "pylsp"
    ],
    "CSharpCommand": [
      "dotnet",
      "exec",
      "csharp-ls"
    ],
    "JavaScriptCommand": [
      "typescript-language-server",
      "--stdio"
    ],
    "TypeScriptCommand": [
      "typescript-language-server",
      "--stdio"
    ],
    "RustCommand": [
      "rust-analyzer"
    ],
    "GoCommand": [
      "gopls"
    ]
  }
}